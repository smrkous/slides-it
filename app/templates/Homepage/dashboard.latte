
{block content}

{var $username = $user->identity->username}

<header class="dashboard well">
	<a data-modal="create" class="float-right btn btn-large btn-success">New presentation</a>

	<span class="username">{$username}</span>
</header>

<section class="presentation-list">
	<div n:foreach="$presentations as $p">
		<a n:href="Presentation:show, username => $username, slug => $p->slug" class="name">
			{$p->name}
		</a>
		-
		<a n:href="Presentation:edit, username => $username, slug => $p->slug">
			edit
		</a>
		-
		<a href="#" class="share-link" data-modal="share" data-presentation="{$p->id}">
			share
		</a>
	</div>
</section>

